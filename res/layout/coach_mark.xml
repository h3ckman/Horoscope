<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coach_mark_master_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d1000000" >

    <ImageView
        android:id="@+id/arrowTopLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha=".55"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_nav" />

    <TextView
        android:id="@+id/labelNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/arrowTopLeft"
        android:alpha=".65"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="110dp"
        android:text="Tap to navigate\nhoroscopes"
        android:textColor="#fcfcfc"
        android:textSize="24dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/arrowTopRight"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:alpha=".55"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_refresh" />

    <TextView
        android:id="@+id/labelRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_below="@+id/labelNav"
        android:alpha=".65"
        android:fontFamily="sans-serif-light"
        android:layout_marginRight="70dp"
        android:layout_marginTop="110dp"
        android:text="Tap to force a refresh"
        android:textColor="#fcfcfc"
        android:textSize="24dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/label_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:alpha=".55"
        android:fontFamily="sans-serif"
        android:text="(Tap to dismiss)"
        android:textColor="#fcfcfc"
        android:textSize="12dp"
        android:textStyle="normal" />

</RelativeLayout>